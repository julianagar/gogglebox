<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title></title>
        <meta name="description" content="">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="">

        <link rel="stylesheet" href="styles.css">

        <!-- css -->
        <link rel="stylesheet" href="styles.css">

        <!-- bootstrap -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">

        <!-- bootstrap -->
        <script src="https://kit.fontawesome.com/31bda5697b.js" crossorigin="anonymous"></script>

         <!-- fonts  -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Quicksand:wght@500&display=swap" rel="stylesheet">
    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
              <a class="navbar-brand" href="/">Movies and TV</a>
              <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
              </button>
              <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                  <li class="nav-item">
                    <a class="nav-link active" aria-current="page" href="/">Home</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" href="/about">About</a>
                  </li>
                </ul>
              </div>
            </div>
          </nav>

          <div class="info-general" style="background: rgb(238,174,202);
          background: radial-gradient(circle, rgba(238,174,202,1) 0%, rgba(148,187,233,1) 100%);">
            <h1 class="title"><%= data.title %></h1>
            <h2 class="show-info">
              <%= data.release_year %> |
              <% if (data.imdb_type === "movie") { %>
                Movie
              <% } else if (data.imdb_type === "tv") { %>
                TV
             <%} %>
            </h2>
            <h3 class="show-info">
              <% data.genres.forEach(genre => {%>
              <span><%=genre%></span>
            <%})%></h3>
            <% if (data.director_names.length != 0) { %>
              <p><strong>directed by <%=data.director_names[0]%> </strong></p>
            <% } %>
            <img class="poster-image" src="<%=data.image%>" alt="Poster image for <%= data.title %>">
            <p class="plot"><strong>Plot:</strong> <%=data.description%></p>
            <hr>
          </div>

         

          <div class="info-cast">
            <div>
                  <% data.actors.slice(0, 3).forEach(actor => {  %>
                      <div class="cast-member">
                        <h1><%=actor.name%></h1>
                        <br>
                        <img class="actor-image" src="<%=images[actor.name]%>" alt="<%=actor.name%>" width="200px">
                      </div>
                  <%}) %> 
                  <div class="cast-member others">
                    <h2>and</h2>
                    <h3>
                      <% data.actors.slice(4,10).forEach(actor => { %>
                        <span><%=actor.name%>, </span>
                    <% }) %>
                    </h3>
                  </div>
            </div>
          </div>
         
        </body>
</html>